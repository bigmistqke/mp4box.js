{
  "name": "mp4box",
  "version": "0.5.2",
  "description": "JavaScript version of GPAC's MP4Box tool",
  "type": "module",
  "keywords": [
    "mp4",
    "HTML 5 media",
    "Media Source Extension",
    "streaming"
  ],
  "homepage": "https://github.com/gpac/mp4box.js",
  "main": "dist/all.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/gpac/mp4box.js.git"
  },
  "bugs": {
    "url": "https://github.com/gpac/mp4box.js/issues"
  },
  "author": {
    "name": "Cyril Concolato",
    "email": "cyril.concolato@telecom-paristech.fr",
    "url": "http://concolato.wp.mines-telecom.fr/"
  },
  "license": "BSD-3-Clause",
  "exports": {
    ".": {
      "types": "./dist/all.d.ts",
      "import": "./dist/all.js",
      "require": "./dist/all.cjs"
    },
    "./simple": {
      "types": "./dist/simple.d.ts",
      "import": "./dist/simple.js",
      "require": "./dist/simple.cjs"
    }
  },
  "scripts": {
    "build": "concurrently \"pnpm build:all\" \"pnpm build:simple\"",
    "build:all": "concurrently \"pnpm build:all:esm\" \"pnpm build:all:cjs\"",
    "build:all:esm": "tsup entries/all.ts --format esm --sourcemap --dts",
    "build:all:cjs": "tsup entries/all.ts --format cjs --sourcemap",
    "build:simple": "concurrently \"pnpm build:simple:esm\" \"pnpm build:simple:cjs\"",
    "build:simple:esm": "tsup entries/simple.ts --format esm --sourcemap --dts",
    "build:simple:cjs": "tsup entries/simple.ts --format cjs --sourcemap",
    "circular": "dpdm -T ./entries/all.ts",
    "types": "tsc --noEmit --project tsconfig.json"
  },
  "devDependencies": {
    "blanket": "^1.2.3",
    "concurrently": "^9.1.0",
    "dpdm": "^3.14.0",
    "qunitjs": "^1.23.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}
